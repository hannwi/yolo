# see https://editorconfig.org/
root = true

# Matches multiple files with brace expansion notation
[*.{go,md,yml,yaml,sh,puml,json,js,html,css,http,conf}]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
